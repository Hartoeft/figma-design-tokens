{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "amd",
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outFile": "build/build.js"
    },
    "include": [
        "./src/**/*.ts"
    ]
}